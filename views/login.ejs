<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
</head>
<body style="background-image: url(/images/bj.jpg);background-size: cover">
<div class="bigbox">
    <div class="container">
        <div class="row">
            <div class="bs-example" style="padding-top: 100px">
                <div class="jumbotron" style="background: cornflowerblue;color: white;opacity: 0.7">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">管理员登录</label>
                            <input type="email" class="form-control" id="admin" placeholder="管理员登录">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">密码</label>
                            <input type="password" class="form-control" id="adminMima" placeholder="密码">
                        </div>


                        <button type="button" class="btn btn-default" id="but">登录</button>
                        <%   if(!admin){%>
                        <button type="button" class="btn btn-default" id="zhuce">注册</button>
                        <%   } %>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/jquery-1.12.3.min.js"></script>

<script>
    $("#but").click(function () {
        $.post("/login",{
            "yonhuming":$("#admin").val(),
            "mima":$("#adminMima").val(),
        },function (data) {
            if(data.result==1){
                alert("登陆成功");
                window.location="/showIndex";
            }
            else if(data.result==-1){
                alert("服务器错误")
            }
            else if(data.result==-2){
                alert("没有此管理员")

            }
            else if(data.result==-3){
                alert("密码错误")
            }
        })
    });


    $("#zhuce").click(function () {
        window.location = "/adminReg"
    })
</script>
</body>
</html>